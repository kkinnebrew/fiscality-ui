{{#each transactions}}

<div class="transaction-row" data-id="{{transactionLineId}}">

    <div class="column-sm column-left">
        <div class="reconciliation"></div>
    </div>

    <div class="column-md column-left transaction-info">
        <div class="date">{{dateFormat transactionDate 'M/d/yyyy'}}</div>
        <div class="transaction-type">{{transactionType}}</div>
    </div>

    <div class="column-lg column-left description">
        <div class="description-text">{{description}}</div>
        <div class="account-text">{{accountNames}}</div>
    </div>

    <div class="column-md column-right balance">{{currency balance}}</div>

    <div class="column-md column-right amount">{{currency amount}}</div>

</div>

{{/each}}