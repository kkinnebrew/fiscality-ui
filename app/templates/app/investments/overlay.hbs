<div id="portfolios-overlay">

    <div class="portfolio-selector-title">Portfolios</div>

    {{#if overlayed}}
        <div class="portfolios-close-btn" data-bind="click:close()"></div>
    {{/if}}

    <div class="portfolio-lists">

        <ul class="portfolio-list">
            <li class="portfolio-list-header">Traditional</li>
            {{#each portfolios}}
                <li class="portfolio-list-item" data-key="{{portfolioId}}">
                    <span class="label">{{portfolioName}}</span>
                </li>
            {{/each}}
        </ul>

        <ul class="portfolio-list">
            <li class="portfolio-list-header">Retirement</li>
            <li class="portfolio-list-item"><span data-link class="label">Merrill Lynch Roth IRA</span></li>
            <li class="portfolio-list-item"><span class="label">Principal ESOP</span></li>
            <li class="portfolio-list-item"><span class="label">Principal Traditional 401k</span></li>
            <li class="portfolio-list-item"><span class="label">Principal Roth 401k</span></li>
        </ul>

    </div>

</div>