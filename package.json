{
  "name": "fiscality-ui",
  "private": true,
  "version": "0.1.0",
  "description": "Powerful personal financial management",
  "homepage": "https://github.com/kkinnebrew/fiscality-ui",
  "main": "server.js",
  "dependencies": {
    "express": "~4.9.x",
    "bower": "^1.3.1"
  },
  "devDependencies": {
    "karma": "~0.10",
    "protractor": "^1.1.1",
    "http-server": "^0.6.1",
    "shelljs": "^0.2.6",
    "karma-junit-reporter": "^0.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kkinnebrew/fiscality-ui"
  },
  "scripts": {

    "start": "node server.js",
    "serve": "http-server -a localhost -p 8000 -c-1",

    "pretest": "npm install",
    "test": "karma start karma.conf.js",
    "test-single-run": "karma start karma.conf.js  --single-run",

    "preupdate-webdriver": "npm install",
    "update-webdriver": "webdriver-manager update",

    "preprotractor": "npm run update-webdriver",
    "protractor": "protractor e2e-tests/protractor.conf.js",

